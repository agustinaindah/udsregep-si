<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layError"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp"
    android:visibility="gone"
    android:background="@color/flat_clouds"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/imgError"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/no_internet" />

    <!-- <TextView
         android:id="@+id/txtError"
         style="@style/MatchWrapLayout"
         android:layout_marginBottom="20dp"
         android:layout_toRightOf="@id/imgError"
         android:gravity="center"
         android:text="@string/text_error"
         android:textColor="@color/material_grey_blue"
         android:textSize="20sp" />-->

    <Button
        android:id="@+id/btnError"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgError"
        android:drawableLeft="@drawable/ic_refresh"
        android:text="Ulangi"
        android:textSize="18sp"
        android:theme="@style/ButtonColoredPrimary" />

</LinearLayout>