<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MatchMatchLayout"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layContainer"
        style="@style/MatchWrapLayout"
        android:padding="5dp">

        <ImageView
            android:id="@+id/imgUdSregep"
            style="@style/WrapWrapLayout"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:src="@drawable/logo_sregep"/>

        <android.support.v7.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_below="@+id/imgUdSregep"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="5dp"
            app:contentPadding="5dp">

            <RelativeLayout
                android:id="@+id/layItemInfo"
                style="@style/MatchMatchLayout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

            <ImageView
                android:id="@+id/imgItemInfo"
                android:layout_width="match_parent"
                android:layout_height="163dp"
                android:background="@drawable/banner_informasi"
                android:transitionName="@string/transition_string" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardChat"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/cardInfo"
            android:layout_margin="5dp"
            app:contentPadding="5dp">

            <RelativeLayout
                android:id="@+id/layItemChat"
                style="@style/MatchMatchLayout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgItemChat"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="@drawable/banner_konsultasi"
                    android:transitionName="@string/transition_string" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardFormOrder"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/cardChat"
            android:layout_margin="5dp"
            app:contentPadding="5dp">

            <RelativeLayout
                android:id="@+id/layItemFormOrder"
                style="@style/MatchMatchLayout"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true">

                <ImageView
                    android:id="@+id/imgItemFormOrder"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:background="@drawable/banner_pengambilan"
                    android:transitionName="@string/transition_string" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>