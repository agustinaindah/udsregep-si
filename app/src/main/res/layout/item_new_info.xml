<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/layItemInfo"
        style="@style/MatchMatchLayout"
        android:padding="15dp">

        <TextView
            android:id="@+id/txtItemInfoTitle"
            style="@style/MatchWrapLayout"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:ellipsize="end"
            android:gravity="left"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtItemInfoContent"
            style="@style/MatchWrapLayout"
            android:layout_below="@+id/txtItemInfoTitle"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="5"
            android:singleLine="false"
            android:text="lorem ipsum dolor sit amet consencu...lorem ipsum dolor sit amet consencu...lorem ipsum dolor sit amet consencu..."
            android:textColor="@color/material_blue_grey_800"
            android:textSize="14sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>